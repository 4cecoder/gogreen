{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "sourceMap": true,
    "types": [
      "node", "jest"
    ],
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}